{
  "environment": {
    "NODE_ENV": "production",
    "APP_NAME": "Linea",
    "APP_VERSION": "0.2.0"
  },
  "database": {
    "DATABASE_URL": "postgresql://username:password@production-db:5432/linea_production",
    "DB_POOL_MIN": 10,
    "DB_POOL_MAX": 50,
    "DB_POOL_IDLE_TIMEOUT": 30000
  },
  "redis": {
    "REDIS_URL": "redis://production-redis:6379",
    "REDIS_PASSWORD": "production-redis-password",
    "REDIS_DB": 0,
    "REDIS_KEY_PREFIX": "linea:prod:"
  },
  "server": {
    "API_URL": "https://api.linea.app",
    "FRONTEND_URL": "https://linea.app",
    "PORT": 9050,
    "HOST": "0.0.0.0",
    "CORS_ORIGIN": "https://linea.app",
    "CORS_CREDENTIALS": true
  },
  "security": {
    "JWT_SECRET": "production-jwt-secret-from-railway-vars",
    "JWT_EXPIRES_IN": "7d",
    "JWT_REFRESH_EXPIRES_IN": "30d",
    "SESSION_SECRET": "production-session-secret-from-railway-vars",
    "SESSION_COOKIE_NAME": "linea_session",
    "SESSION_COOKIE_MAX_AGE": 604800000,
    "SESSION_COOKIE_SECURE": true,
    "SESSION_COOKIE_HTTP_ONLY": true,
    "SESSION_COOKIE_SAME_SITE": "lax",
    "RATE_LIMIT_WINDOW_MS": 900000,
    "RATE_LIMIT_MAX_REQUESTS": 100
  },
  "email": {
    "SENDGRID_API_KEY": "production-sendgrid-api-key",
    "SENDGRID_FROM_EMAIL": "noreply@linea.app",
    "SENDGRID_FROM_NAME": "Linea",
    "SENDGRID_REPLY_TO": "support@linea.app"
  },
  "analytics": {
    "ANALYTICS_ENABLED": true,
    "ANALYTICS_ID": "production-analytics-id",
    "ANALYTICS_DOMAIN": "linea.app",
    "ANALYTICS_SCRIPT_URL": "https://plausible.io/js/script.js"
  },
  "observability": {
    "SENTRY_DSN": "production-sentry-dsn",
    "SENTRY_ENVIRONMENT": "production",
    "SENTRY_RELEASE": "0.2.0",
    "LOG_LEVEL": "warn",
    "LOG_FORMAT": "json",
    "LOG_FILE": "logs/production.log"
  },
  "maps": {
    "NOMINATIM_BASE_URL": "https://nominatim.openstreetmap.org",
    "NOMINATIM_USER_AGENT": "Linea/0.2.0",
    "NOMINATIM_RATE_LIMIT": 100,
    "MAP_TILE_URL": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
    "MAP_ATTRIBUTION": "Â© OpenStreetMap contributors"
  },
  "storage": {
    "UPLOAD_MAX_SIZE": 5242880,
    "UPLOAD_ALLOWED_TYPES": "image/jpeg,image/png,image/webp",
    "UPLOAD_PATH": "./uploads",
    "STORAGE_PROVIDER": "railway"
  },
  "privacy": {
    "DATA_RETENTION_SESSIONS": 30,
    "DATA_RETENTION_EMAILS": 365,
    "DATA_RETENTION_AUDIT_LOGS": 2555,
    "REQUIRE_DOUBLE_OPT_IN": true,
    "COOKIE_CONSENT_REQUIRED": true,
    "ANALYTICS_CONSENT_REQUIRED": true
  },
  "features": {
    "FEATURE_NEARBY_SUGGESTIONS": false,
    "FEATURE_MAP_INTEGRATION": false,
    "FEATURE_PAYMENTS": false,
    "FEATURE_ADVANCED_ANALYTICS": true
  },
  "development": {
    "SEED_ADMIN_EMAIL": "admin@linea.app",
    "SEED_ADMIN_PASSWORD": "production-admin-password",
    "SEED_SAMPLE_EVENTS": false,
    "DEBUG_SQL": false,
    "DEBUG_REDIS": false,
    "DEBUG_EMAIL": false,
    "DEMO_MODE": false
  }
}
